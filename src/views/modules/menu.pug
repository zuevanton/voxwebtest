.popup-wrap
  .popup-content
    .container
      .customselect
        button.customselect__title#country-btn Страны
        .customselect__list#country-list
          +countryList('Южная Америка', '#',['Аргентина', 'Бразилия', 'Перу', 'Уругвай'])
          +countryList('Северная Америка', '#', ['США', 'Канада', 'Мексика'])
          +countryList('Африка', '#', ['Алжир', 'Ботсвана', 'Гамбия', 'Египет', 'Замбия', 'Зимбабве', 'Кения', 'Мадагаскар'])
