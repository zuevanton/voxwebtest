          +countryList('Европа', '#', ['Франция', 'Чехия', 'Италия', 'Германия', 'Англия'])

      .customselect.customselect_date
        button.customselect__title#calendar-btn Даты
        #calendar-cnt.hidden
          .calendar
          p.chosedate__text Выберите дату не позднее которой хотите вернуться

      .customselect.customselect_travel
        button.customselect__title#travel-type-btn Тип путешествия
        #travel-type-cnt.hidden
          .travel__list
            .travel__type Активный
            .travel__type Майские
            .travel__type На авто
            .travel__type На корабле
            .travel__type Новый год
            .travel__type Поход
            .travel__type Серфинг
            .travel__type Эксклюзив
            .travel__type Экскурсионный
            .travel__type Экспедиция
      nav.menu
        a(href="#").menu__item путешествия
        a(href="#").menu__item о нас
        a(href="#").menu__item отзывы
        a(href="#").menu__item блог
      .menu-footer
